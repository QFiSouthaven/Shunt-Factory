# Environment Configuration Example
# Copy this to .env.local for local development

NODE_ENV=development
PORT=8080

# CORS (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Google Cloud Project
GCP_PROJECT_ID=your-gcp-project-id
GEMINI_API_KEY_SECRET_NAME=gemini-api-key

# Development only: Direct API key (not recommended for production)
GEMINI_API_KEY=your-gemini-api-key-here

# Client API Keys (comma-separated, for authentication)
CLIENT_API_KEYS=dev-key-1,dev-key-2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (optional, for distributed rate limiting)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Logging
ENABLE_CLOUD_LOGGING=false
LOG_LEVEL=debug

# Local LLM Configuration (for privacy-focused deployments)
# LM Studio (OpenAI-compatible API)
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=local-model

# Ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
