# Aether Shunt Environment Configuration Template
# Copy this file to .env.local and fill in your values

# ===========================
# Backend Integration (NEW!)
# ===========================
# Backend API URL (Shunt Factory backend with secure API key storage)
VITE_BACKEND_URL=http://localhost:8080

# API Key for backend authentication
VITE_API_KEY=dev-test-key

# Multi-Agent Orchestrator URL (Docker containers)
VITE_ORCHESTRATOR_URL=http://localhost:8090

# Feature Flags for Backend
VITE_USE_MULTI_AGENT=true  # Set to true to use Docker multi-agent system
VITE_USE_BACKEND=false     # Set to true to use secure backend API (recommended for production)

# ===========================
# API Configuration (Legacy - Frontend Only)
# ===========================
# Note: When VITE_USE_BACKEND=true, API keys are securely stored in backend
# Only needed when running in frontend-only mode

# Google Gemini API Key (Required for frontend-only mode)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic API Key (Optional - for Claude integration)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================
# Project Configuration
# ===========================
# Project ID for tracking and analytics
PROJECT_ID=shunt-factory

# Default Gemini Model
# Options: Gemini_2.5_Pro, Gemini_2.5_Flash, Gemini_2.0_Flash
MODEL_ID=Gemini_2.5_Pro

# ===========================
# Environment
# ===========================
# Environment: development, staging, production
VITE_APP_ENV=development

# Application Version (auto-populated from package.json)
VITE_APP_VERSION=2.0.0-professional

# ===========================
# Feature Flags
# ===========================
# Enable/disable features per environment

# Telemetry: Event tracking and analytics
# Set to false in production if backend telemetry endpoint is not deployed
# Circuit breaker prevents network spam when backend unavailable (5 failures = 60s pause)
VITE_ENABLE_TELEMETRY=true

VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_TOOLS=true

# ===========================
# Backend API Configuration
# ===========================
# Backend API Base URL (can also use VITE_BACKEND_URL above)
VITE_API_BASE_URL=

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ===========================
# Rate Limiting (Frontend)
# ===========================
# Max requests per minute per feature
VITE_RATE_LIMIT_SHUNT=50
VITE_RATE_LIMIT_WEAVER=10
VITE_RATE_LIMIT_FOUNDRY=20

# ===========================
# Logging Configuration
# ===========================
# Log level: debug, info, warn, error
VITE_LOG_LEVEL=info

# Enable console logging
VITE_ENABLE_CONSOLE_LOGS=true

# ===========================
# Performance
# ===========================
# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Lazy load components threshold (milliseconds)
VITE_LAZY_LOAD_THRESHOLD=100

# ===========================
# Security
# ===========================
# Enable Content Security Policy
VITE_ENABLE_CSP=true

# Enable input sanitization
VITE_ENABLE_SANITIZATION=true

# ===========================
# Third-Party Integrations
# ===========================
# Sentry DSN (for error tracking in production)
VITE_SENTRY_DSN=

# Google Analytics ID
VITE_GA_TRACKING_ID=

# Posthog API Key (for product analytics)
VITE_POSTHOG_KEY=
VITE_POSTHOG_HOST=
